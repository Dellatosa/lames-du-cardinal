<img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="128" width="128">
<div class="actor-infos">
    <div class="ligne-nom">
        <div class="nom-lame"><input name="name" type="text" value="{{actor.name}}" placeholder="{{localize 'LdC.nom'}}" {{#unless unlocked}}readonly{{/unless}}/></div>
        <div class="padlock">
            <a class="sheet-change-lock" title="{{#if unlocked}} {{localize 'LdC.tooltip.verrou'}} {{else}} {{localize 'LdC.tooltip.deverrou'}} {{/if}}">
                {{#if unlocked}}<i class="fa-solid fa-unlock"></i>{{else}}<i class="fa-solid fa-lock"></i>{{/if}}
            </a>
        </div>
    </div>
    <div class="grid-identite">
        <label>{{localize "LdC.age"}}</label>
        <input name="system.age" type="text" value="{{data.system.age}}" placeholder="{{localize 'LdC.age'}}" {{#unless unlocked}}readonly{{/unless}}>
        <label>{{localize "LdC.sexe"}}</label>
        <select name="system.sexe">
            {{#select data.system.sexe}}
                {{#each config.sexe as |sexe keySexe|}}
                    <option value="{{keySexe}}" {{#unless ../unlocked}}disabled{{/unless}}>{{sexe}}</option>
                {{/each}}
            {{/select}} 
        </select>
        <label>{{localize "LdC.origine"}}</label>
        <input class="origin-val" name="system.origine" type="text" value="{{data.system.origine}}" placeholder="{{localize 'LdC.origine'}}" {{#unless unlocked}}readonly{{/unless}}>
        <label>{{localize "LdC.profils"}}</label>
        <div class="profils">
            {{#each profils as |profil id|}}
                <div class="profil-item item-box">
                    <label>{{profil.name}}</label>
                    {{#if ../unlocked}}<a class="profil-suppr" title="{{localize 'LdC.supprProfil'}}" data-item-id="{{profil._id}}"><i class="fa-solid fa-xmark"></i></a>{{/if}}
                </div>
            {{/each}}
        </div>
    </div>
</div>